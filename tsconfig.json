{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": [
        "es2017"
      ],
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["./src"]
}
