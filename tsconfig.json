{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "baseUrl": "./src",
    "outDir": "./dist",

    "paths": {
      "@cryb/controllers/*": [
        "controllers/*"
      ],
      "@cryb/config/*": [
        "config/*"
      ],
      "@cryb/drivers/*": [
        "drivers/*"
      ],
      "@cryb/models/*": [
        "models/*"
      ],
      "@cryb/server/*": [
        "server/*"
      ],
      "@cryb/services/*": [
        "services/*"
      ],
      "@cryb/utils/*": [
        "utils/*"
      ]
    },

    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
